<configuration>
    <authentication-client xmlns="urn:elytron:client:1.7">
        <authentication-rules>
            <rule use-configuration="default-config"/>
        </authentication-rules>
        <authentication-configurations>
            <configuration name="default-config">
                <set-user-name name="quickstartUser"/>
                <credentials>
                    <clear-password password="${ENC::resolver1:InV4LidT0k3NTh4tC4nn0tb3d3crYpt3D=}"/>
                </credentials>
                <sasl-mechanism-selector selector="SCRAM-SHA-512"/>
                <providers>
                    <use-service-loader />
                </providers>
            </configuration>
        </authentication-configurations>
    </authentication-client>
    <encryption-client xmlns="urn:encryption:client:preview:1.0">
        <credential-stores>
            <credential-store name="my-credential-store" type="PropertiesCredentialStore">
                <attributes>
                    <attribute name="location" value="${credstore-path.prop}"/>
                </attributes>
            </credential-store>
        </credential-stores>
        <expression-resolvers default-resolver="resolver1">
            <expression-resolver name="resolver1" credential-store-name="my-credential-store" alias="secretkey"/>
        </expression-resolvers>
    </encryption-client>
</configuration>
